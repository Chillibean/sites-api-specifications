{
  "description": "A site",
  "type": "object",
  "properties": {
    "country": {
      "type": "string",
      "description": "The country of site",
      "example": "GB"
    },
    "go_live_date": {
      "type": "string",
      "format": "date",
      "description": "The go live date of site",
      "example": "2020-01-01"
    },
    "id": {
      "type": "number",
      "description": "The id of site",
      "example": 1
    },
    "identifier": {
      "type": "string",
      "description": "The identifier of site",
      "example": "SITE1"
    },
    "number": {
      "type": "string",
      "description": "The number of site",
      "example": "SITE1"
    },
    "live": {
      "type": "boolean",
      "description": "The live indicator of site",
      "example": true
    },
    "name": {
      "type": "string",
      "description": "The name of site",
      "example": "Site 1"
    },
    "permissions": {
      "type": "array",
      "description": "The permissions of current user for a site",
      "items": {
        "type": "string",
        "description": "The permission name",
        "example": "can_create_forms"
      }
    },
    "principal_investigator": {
      "type": "string",
      "description": "The name of principal investigator",
      "example": "Test Name",
      "nullable": true
    },
    "trial_configuration": {
      "type": "object",
      "nullable": true,
      "description": "The trial configuration of site",
      "additionalProperties": {
        "$ref": "./TrialConfiguration.json"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "country",
    "go_live_date",
    "id",
    "number",
    "live",
    "name",
    "permissions",
    "trial_configuration"
  ]
}
