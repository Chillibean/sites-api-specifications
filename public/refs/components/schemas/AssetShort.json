{
  "description": "An asset",
  "type": "object",
  "properties": {
    "contains_pii": {
      "type": "boolean",
      "description": "Is the asset contains PII",
      "example": false
    },
    "created_at": {
      "type": "string",
      "description": "The asset created at date",
      "example": "2024-03-27T15:46:56.845Z"
    },
    "extension": {
      "type": "string",
      "description": "The asset extension",
      "example": "png"
    },
    "filename": {
      "type": "string",
      "description": "The asset filename",
      "example": "image.png"
    },
    "id": {
      "type": "number",
      "description": "The asset id",
      "example": 1
    },
    "media": {
      "oneOf": [
        {
          "type": "object",
          "description": "The links to the asset media",
          "properties": {
            "url": {
              "type": "string",
              "description": "The asset media url",
              "nullable": true,
              "example": "https://eu-west-4-chillipharm-bucket.s3.eu-west-4.amazonaws.com/assets/image.png"
            }
          },
          "additionalProperties": false,
          "required": [
            "url"
          ]
        },
        {
          "type":"object",
          "properties":{
            "hd_video": {
              "type":"object",
              "properties": {
                "status": {
                  "nullable": true,
                  "type": "string",
                  "description": "The asset hd video status",
                  "example": "pending"
                }
              },
              "additionalProperties": false,
              "required": [
                "status"
              ]
            },
            "sd_video": {
              "type":"object",
              "properties": {
                "status": {
                  "nullable": true,
                  "type": "string",
                  "description": "The asset sd video status",
                  "example": "pending"
                }
              },
              "additionalProperties": false,
              "required": [
                "status"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "hd_video",
            "sd_video"
          ]
        }
      ]
    },
    "media_type": {
      "type": "string",
      "description": "The asset media type",
      "example": "image"
    },
    "position": {
      "type": "number",
      "description": "The asset position",
      "example": 16
    },
    "processed": {
      "type": "boolean",
      "description": "Is the asset processed",
      "example": true
    },
    "thumbnails": {
      "type": "object",
      "properties": {
        "small": {
          "type": "string",
          "description": "The asset small thumbnail",
          "example": "https://eu-west-4-chillipharm-bucket.s3.eu-west-4.amazonaws.com/thumbnails-small/image.png",
          "nullable": true
        },
        "large": {
          "type": "string",
          "description": "The asset large thumbnail",
          "example": "https://eu-west-4-chillipharm-bucket.s3.eu-west-4.amazonaws.com/thumbnails-large/image.png",
          "nullable": true
        }
      }
    },
    "title": {
      "type": "string",
      "description": "The asset title",
      "example": "image.png"
    }
  },
  "required": [
    "contains_pii",
    "created_at",
    "extension",
    "filename",
    "id",
    "media",
    "media_type",
    "position",
    "processed",
    "thumbnails",
    "title"
  ],
  "additionalProperties": false
}
